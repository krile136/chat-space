.sidebar
  .sidebar__header
    .sidebar__header--name
      = current_user.name
    =link_to new_group_path(), data: {"turbolinks" => false} do
      = fa_icon 'edit', class: "sidebar__header--edit"
    =link_to edit_user_path(current_user), data: {"turbolinks" => false} do
      = fa_icon 'gear', class: "sidebar__header--gear"
  - current_user.groups.each do |group|
    = link_to group_messages_path(group), class: "sidebar__room-link", data: {"turbolinks" => false} do
      .sidebar__room
        .sidebar__room--name
          = group.name
        .sidebar__room--text{"data-sidebar-message-group-id":"#{group.id}"}
          = group.show_last_message